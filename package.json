{
    "name": "Mahindra_Sales",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@cap-js/hana": "^1",
        "@sap/cds": "^8",
        "@sap/xsenv": "^5.3.0",
        "@sap/xssec": "^4.2.4",
        "express": "^4",
        "passport": "^0.7.0"
    },
    "devDependencies": {
        "@cap-js/cds-types": "^0.6",
        "@cap-js/sqlite": "^1",
        "@sap/cds-dk": "^8",
        "@sap/ux-specification": "UI5-1.120",
        "rimraf": "^5.0.5"
    },
    "scripts": {
        "start": "cds-serve",
        "watch-m_sales": "cds watch --open m_sales/webapp/index.html?sap-ui-xx-viewCache=false",
        "undeploy": "cf undeploy Mahindra_Sales --delete-services --delete-service-keys --delete-service-brokers",
        "build": "rimraf resources mta_archives && mbt build --mtar archive",
        "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
    },
    "cds": {
        "requires": {
            "db": "hana",
            "auth": "dummy",
            "fiori": {
                "bypass_draft": true
            },
            "destinations": true,
            "TEST_DEST1": {
                "kind": "odata-v2",
                "csrf": true,
                "csrfInBatch": true,
                "credentials": {
                    "destination": "TEST_DEST"
                },
                "destinationOptions": {
                    "selectionStrategy": "alwaysProvider",
                    "jwt": null
                }
            }
        },
        "sql": {
            "native_hana_associations": false
        }
    },
    "sapux": [
        "app/m_sales"
    ]
}